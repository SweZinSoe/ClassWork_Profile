<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John McDonald"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/img_profile"
        android:layout_margin="20dp"/>

    <ImageView
        android:id="@+id/icon_location"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_location"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txt_name"
        android:layout_marginLeft="28dp"/>

    <TextView
        android:id="@+id/txt_town"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Los Angles, CA"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/icon_location"
        app:layout_constraintTop_toBottomOf="@id/txt_name"/>

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:src="@drawable/profile6"
        android:scaleType="fitXY"
        android:layout_margin="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txt_name"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_follow"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_btn"
        android:text="follow"
        app:layout_constraintCircle="@id/img_profile"
        app:layout_constraintCircleAngle="255"
        app:layout_constraintCircleRadius="220dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="34"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn_follow"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"/>

    <TextView
        android:id="@+id/text_1256"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1256"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/text_34"
        app:layout_constraintBaseline_toBaselineOf="@id/text_34"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/txt_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="posts"
        app:layout_constraintTop_toBottomOf="@id/text_34"
        app:layout_constraintLeft_toLeftOf="@id/text_34"
        app:layout_constraintRight_toRightOf="@id/text_34" />

    <TextView
        android:id="@+id/txt_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="followers"
        app:layout_constraintTop_toBottomOf="@id/text_1256"
        app:layout_constraintLeft_toLeftOf="@id/text_1256"
        app:layout_constraintRight_toRightOf="@id/text_1256"
        android:layout_marginLeft="19dp"/>

    <ImageView
        android:id="@+id/img_one"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:src="@drawable/one"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/txt_followers"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/img_two"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/img_two"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:src="@drawable/two"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toRightOf="@id/img_one"
        app:layout_constraintRight_toLeftOf="@id/img_three"
        app:layout_constraintBottom_toBottomOf="@id/img_one"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/img_three"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/one"
        app:layout_constraintLeft_toRightOf="@id/img_two"
        app:layout_constraintRight_toLeftOf="@id/img_four"
        app:layout_constraintBottom_toBottomOf="@id/img_one"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/img_four"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/two"
        app:layout_constraintLeft_toRightOf="@id/img_three"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/img_one"
        android:layout_marginRight="10dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/icon_twitter"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_twitter"
        app:layout_constraintTop_toBottomOf="@id/img_one"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintRight_toLeftOf="@id/icon_facebook"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/icon_facebook"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_facebook"
        app:layout_constraintLeft_toRightOf="@id/icon_twitter"
        app:layout_constraintBottom_toBottomOf="@id/icon_twitter"
        app:layout_constraintRight_toLeftOf="@id/icon_instagram" />

    <ImageView
        android:id="@+id/icon_instagram"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_instagram"
        app:layout_constraintLeft_toRightOf="@id/icon_facebook"
        app:layout_constraintBottom_toBottomOf="@id/icon_twitter"
        app:layout_constraintRight_toLeftOf="@id/icon_skype" />

    <ImageView
        android:id="@+id/icon_skype"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_skype"
        app:layout_constraintLeft_toRightOf="@id/icon_instagram"
        app:layout_constraintBottom_toBottomOf="@id/icon_twitter"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/img_line"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:src="@drawable/as"
        app:layout_constraintTop_toBottomOf="@id/icon_skype"
        app:layout_constraintBottom_toTopOf="@id/about_txt"
        android:layout_marginVertical="20dp"/>

    <TextView
        android:id="@+id/about_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/img_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/big_paragraph"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:id="@+id/big_paragraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/big_paragraph"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/about_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="50dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>